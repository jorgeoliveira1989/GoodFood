<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
<LinearLayout
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2">
    <TextView
        android:text="Procurar Receita"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="35sp"
        android:id="@+id/textView1"
        android:textColor="#965C05"
        android:background="#ffFF9F10"
        android:gravity="center"
        android:textStyle="bold" />
</LinearLayout> 
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:text="ID:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_id"
            android:textSize="20sp"
            android:textStyle="bold"
        />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:digits="0123456789" 
            android:id="@+id/et_id"
            android:lines="1"
            android:layout_marginLeft="0.0dp"
            android:layout_marginRight="10.0dp"
        />
        <Button
            android:text="PROCURAR"
            android:textSize="22sp"
            android:layout_width="217.5dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_procurar"
            android:textColor="#965C05"
            android:backgroundTint="#ffFF9F10"
            android:textStyle="bold"
            />


    </LinearLayout> 
<LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:text="RECEITA:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_receita"
            android:textSize="20sp"
            android:textStyle="bold"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:lines="1"
            android:id="@+id/et_receita"
            android:layout_marginLeft="0.0dp" 
        />

    </LinearLayout> 
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:text="CATEGORIA:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_categoria"
            android:textSize="20sp"
            android:textStyle="bold"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:lines="1"
            android:id="@+id/et_categoria"
            android:layout_marginLeft="0.0dp" 
        />

    </LinearLayout>
<TextView
            android:text="MODO DE PREPARO:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_modo_preparo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20px"
            />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="23"
        android:gravity="top"
        android:id="@+id/et_modo_preparo" />

    <Button
        android:text="VOLTAR"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_voltar"
        android:textColor="#ffFF9F10"
        android:backgroundTint="#965C05"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="bottom" 
        
            />

</LinearLayout>

